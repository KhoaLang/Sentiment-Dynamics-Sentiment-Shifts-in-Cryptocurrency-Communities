{
  "title": "Crypto Sentiment Intelligence",
  "panels": [
    {
      "type": "timeseries",
      "title": "Sentiment vs BTC Price",
      "targets": [
        {
          "query": "SELECT ts, avg_sentiment FROM reddit_clean"
        },
        {
          "query": "SELECT ts, price FROM price_btc",
          "yAxis": 2
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Emotion Decomposition",
      "stack": true,
      "targets": [
        { "query": "SELECT ts, avg_fear FROM reddit_clean" },
        { "query": "SELECT ts, avg_anger FROM reddit_clean" },
        { "query": "SELECT ts, avg_joy FROM reddit_clean" }
      ]
    },
    {
      "type": "heatmap",
      "title": "Sentiment â†’ Price Lag Correlation",
      "targets": [
        {
          "query": "SELECT lag_minutes, sentiment_corr FROM sentiment_price_lag"
        }
      ]
    }
  ]
}
